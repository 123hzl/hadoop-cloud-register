<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hzl.hadoop.security.mapper.SysUserMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hzl.hadoop.security.entity.SysUser" id="sysUserMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="avatar" column="avatar"/>
        <result property="phone" column="phone"/>
        <result property="status" column="status"/>
        <result property="versionNum" column="version_num"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="tenantId" column="tenant_id"/>
        <result property="deleted" column="deleted"/>
    </resultMap>

    <select id="listPage" resultType="com.hzl.hadoop.security.dto.SysUserDTO">
        select
        id,
        name,
        username,
        password,
        avatar,
        phone,
        status,
        version_num,
        create_by,
        create_time,
        update_by,
        update_time,
        tenant_id,
        deleted
        from sys_user
        <where>
            1=1
            <if test="id!=null">
                and id=#{id}
            </if>
            <if test="realname!=null and realname!=''">
                and name=#{realname}
            </if>
            <if test="username!=null and username!=''">
                and username=#{username}
            </if>
            <if test="password!=null and password!=''">
                and password=#{password}
            </if>
            <if test="avatar!=null and avatar!=''">
                and avatar=#{avatar}
            </if>
            <if test="phone!=null and phone!=''">
                and phone=#{phone}
            </if>
            <if test="status!=null">
                and status=#{status}
            </if>
            <if test="versionNum!=null">
                and version_num=#{versionNum}
            </if>
            <if test="createBy!=null">
                and create_by=#{createBy}
            </if>
            <if test="createTime!=null">
                and create_time=#{createTime}
            </if>
            <if test="updateBy!=null">
                and update_by=#{updateBy}
            </if>
            <if test="updateTime!=null">
                and update_time=#{updateTime}
            </if>
            <if test="tenantId!=null">
                and tenant_id=#{tenantId}
            </if>
            <if test="deleted!=null">
                and deleted=#{deleted}
            </if>
        </where>
    </select>

</mapper>